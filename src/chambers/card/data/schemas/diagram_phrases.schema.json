{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "diagram_phrases.schema.json",
  "title": "DiagramPhraseCatalog",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "when",
      "emit"
    ],
    "properties": {
      "when": {
        "type": "object",
        "properties": {
          "templateId": {
            "type": "string"
          },
          "outcome": {
            "enum": [
              "accept",
              "harmonic"
            ]
          }
        },
        "additionalProperties": false
      },
      "emit": {
        "type": "array",
        "minItems": 1,
        "items": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "kind"
              ],
              "properties": {
                "kind": {
                  "const": "harmonic-cross"
                },
                "intensity": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": [
                "kind"
              ],
              "properties": {
                "kind": {
                  "const": "aura-radar"
                },
                "ring": {
                  "type": "integer",
                  "minimum": 0
                },
                "life": {
                  "type": "integer",
                  "minimum": 0
                }
              },
              "additionalProperties": false
            },
            {
              "type": "object",
              "required": [
                "kind"
              ],
              "properties": {
                "kind": {
                  "const": "crown-corona"
                },
                "rayCount": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 128
                }
              },
              "additionalProperties": false
            }
          ]
        }
      }
    },
    "additionalProperties": false
  }
}