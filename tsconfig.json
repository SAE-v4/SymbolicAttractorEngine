{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": "src",
    "paths": {
      "@engine/*": ["engine/*"],
      "@systems/*": ["systems/*"],
      "@render/*": ["render/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@chambers/*": ["chambers/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["src", "vite.config.ts"]
}
