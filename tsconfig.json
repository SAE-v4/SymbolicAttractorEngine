{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": "src",
    "paths": {
      "@engine/*": ["engine/*"],
      "@systems/*": ["systems/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@modulation/*": ["modulation/*"],
      "@types/*": ["types/*"],
      "@renderers/*": ["renderer/*"],
      "@chambers/*": ["chambers/*"]

    }
  },
  "include": ["src", "vite.config.ts", "_legacy/_chambers/flow"]
}
